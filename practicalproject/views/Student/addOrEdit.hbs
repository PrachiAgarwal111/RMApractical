<h3>{{viewTitle}}</h3>

<form action="/Student" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{Student._id}}">
    <div class="form-group">
        <label>Roll No</label>
        <input type="text" class="form-control" name="RollNo" placeholder="Roll No" value="{{Student.RollNo}}">
        <div class="text-danger">
            {{Student.RollNoError}}</div>
    </div>
    <div class="form-group">
        <label>DOB</label>
        <input type="text" class="form-control" name="DOB" placeholder="DOB" value="{{Student.DOB}}">
        <div class="text-danger">
            {{DOB.NameError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Name</label>
            <input type="text" class="form-control" name="Name" placeholder="Name" value="{{Student.Name}}">
        </div>
        <div class="form-group col-md-6">
            <label>Score</label>
            <input type="text" class="form-control" name="Score" placeholder="Score" value="{{Student.Score}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/Student/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>